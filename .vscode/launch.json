{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "MQTT Interface test: Run subscriber",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/files/poc/mqtt/interface/mqtt_subscriber_test.py",
            "console": "integratedTerminal",
        },
        {
            "name": "MQTT Interface test: Run publisher",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/files/poc/mqtt/interface/mqtt_publisher_test.py",
            "console": "integratedTerminal",
        },
        {
            "name": "PRPL Orchestrator: Run flask app in dev post",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "files/server/app:create_app()",
                "FLASK_ENV": "DEVELOPMENT",
            },
            "args": [
                "run",
                "--host",
                "0.0.0.0",
                "--port",
                "5000",
            ]
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov"
            }
        }
    ]
}
